{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./dist/",
        "jsx": "react-jsx",
        "module": "es2015",
        "lib": ["esnext", "es2019", "dom"],
        "target": "es2015",
        "allowJs": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "noUnusedLocals": true,
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
  }
